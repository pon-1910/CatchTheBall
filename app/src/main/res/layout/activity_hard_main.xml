<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HardMainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hard_scoreLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/score_board"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>

    <FrameLayout
        android:id="@+id/hard_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hard_startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_start"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/hard_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/box"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/hard_orange"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/orange"/>

        <ImageView
            android:id="@+id/hard_black"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/black"/>

        <ImageView
            android:id="@+id/hard_pink"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/pink"/>

        <ImageView
            android:id="@id/hard_black_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/black"/>

    </FrameLayout>

</LinearLayout>